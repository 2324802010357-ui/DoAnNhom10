@{
    ViewBag.Title = "Liên hệ";
}

<div class="container">
    <!-- Contact Hero Section -->
    <div class="section-title">
        <h2>Liên hệ với chúng tôi</h2>
        <p>Chúng tôi luôn sẵn sàng hỗ trợ bạn</p>
    </div>

    <div class="row">
        <!-- Contact Information -->
        <div class="col-md-6">
            <div class="search-filter-section">
                <h3><i class="fas fa-info-circle"></i> Thông tin liên hệ</h3>
                
                <div class="contact-info">
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <h5>Địa chỉ</h5>
                            <p>123 Đường ABC, Quận XYZ, TP.Hồ Chí Minh</p>
                        </div>
                    </div>
                    
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <div>
                            <h5>Số điện thoại</h5>
                            <p>(028) 1234 5678</p>
                        </div>
                    </div>
                    
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <h5>Email</h5>
                            <p>info@fashionstore.com</p>
                        </div>
                    </div>
                    
                    <div class="contact-item">
                        <i class="fas fa-clock"></i>
                        <div>
                            <h5>Giờ làm việc</h5>
                            <p>Thứ 2 - Chủ nhật: 8:00 - 22:00</p>
                        </div>
                    </div>
                </div>

                <div class="social-contact">
                    <h5>Kết nối với chúng tôi</h5>
                    <div class="social-links">
                        <a href="#" class="social-link facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-link instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="social-link youtube">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a href="#" class="social-link tiktok">
                            <i class="fab fa-tiktok"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-md-6">
            <div class="search-filter-section">
                <h3><i class="fas fa-paper-plane"></i> Gửi tin nhắn</h3>
                
                <form id="contactForm">
                    <div class="form-group">
                        <label for="fullName">Họ và tên *</label>
                        <input type="text" class="form-control search-box" id="fullName" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" class="form-control search-box" id="email" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="phone">Số điện thoại</label>
                        <input type="tel" class="form-control search-box" id="phone">
                    </div>
                    
                    <div class="form-group">
                        <label for="subject">Chủ đề *</label>
                        <select class="form-control search-box" id="subject" required>
                            <option value="">Chọn chủ đề</option>
                            <option value="product">Hỏi về sản phẩm</option>
                            <option value="order">Đơn hàng</option>
                            <option value="complaint">Khiếu nại</option>
                            <option value="suggestion">Góp ý</option>
                            <option value="other">Khác</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Nội dung *</label>
                        <textarea class="form-control search-box" id="message" rows="5" required placeholder="Nhập nội dung tin nhắn của bạn..."></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-block">
                        <i class="fas fa-paper-plane"></i> Gửi tin nhắn
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- FAQ Section -->
    <div class="row" style="margin-top: 50px;">
        <div class="col-md-12">
            <div class="section-title">
                <h3>Câu hỏi thường gặp</h3>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="faq-item">
                        <h5><i class="fas fa-shipping-fast"></i> Chính sách giao hàng</h5>
                        <p>Chúng tôi giao hàng toàn quốc trong 2-3 ngày làm việc. Miễn phí giao hàng cho đơn hàng trên 500.000đ.</p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="faq-item">
                        <h5><i class="fas fa-undo"></i> Chính sách đổi trả</h5>
                        <p>Đổi trả miễn phí trong 7 ngày. Sản phẩm phải còn nguyên tem mác và chưa qua sử dụng.</p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="faq-item">
                        <h5><i class="fas fa-credit-card"></i> Phương thức thanh toán</h5>
                        <p>Hỗ trợ thanh toán COD, chuyển khoản, thẻ tín dụng và ví điện tử.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.contact-info {
    margin: 30px 0;
}

.contact-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 25px;
    padding: 15px;
    border-radius: 10px;
    background: #f8f9fa;
    transition: all 0.3s ease;
}

.contact-item:hover {
    background: #e9ecef;
    transform: translateX(5px);
}

.contact-item i {
    font-size: 1.5rem;
    color: #667eea;
    margin-right: 15px;
    margin-top: 5px;
    min-width: 25px;
}

.contact-item h5 {
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
}

.contact-item p {
    margin: 0;
    color: #666;
}

.social-contact {
    margin-top: 30px;
    text-align: center;
}

.social-contact h5 {
    margin-bottom: 20px;
    font-weight: bold;
}

.social-link {
    display: inline-block;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    text-align: center;
    line-height: 50px;
    color: white;
    margin: 0 10px;
    font-size: 1.2rem;
    transition: all 0.3s ease;
    text-decoration: none;
}

.social-link:hover {
    transform: translateY(-3px);
    text-decoration: none;
    color: white;
}

.social-link.facebook {
    background: #3b5998;
}

.social-link.instagram {
    background: linear-gradient(45deg, #405de6, #5851db, #833ab4, #c13584, #e1306c, #fd1d1d);
}

.social-link.youtube {
    background: #ff0000;
}

.social-link.tiktok {
    background: #000000;
}

.faq-item {
    padding: 25px;
    background: white;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    margin-bottom: 20px;
    transition: all 0.3s ease;
}

.faq-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
}

.faq-item h5 {
    color: #667eea;
    margin-bottom: 15px;
    font-weight: bold;
}

.faq-item i {
    margin-right: 10px;
}

.form-group label {
    font-weight: 500;
    color: #333;
    margin-bottom: 8px;
}

.form-group {
    margin-bottom: 20px;
}

#contactForm button[type="submit"] {
    padding: 15px 30px;
    font-size: 1.1rem;
    margin-top: 20px;
}

@media (max-width: 768px) {
    .contact-item {
        flex-direction: column;
        text-align: center;
    }
    
    .contact-item i {
        margin-right: 0;
        margin-bottom: 10px;
    }
    
    .social-link {
        margin: 5px;
    }
}
</style>

@section scripts {
    <script>
    $(document).ready(function() {
        $('#contactForm').on('submit', function(e) {
            e.preventDefault();
            
            // Validate form
            var isValid = true;
            var fullName = $('#fullName').val().trim();
            var email = $('#email').val().trim();
            var subject = $('#subject').val();
            var message = $('#message').val().trim();
            
            if (!fullName || !email || !subject || !message) {
                alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                return;
            }
            
            // Simulate sending message
            var $btn = $(this).find('button[type="submit"]');
            var originalText = $btn.html();
            
            $btn.html('<i class="fas fa-spinner fa-spin"></i> Đang gửi...');
            $btn.prop('disabled', true);
            
            setTimeout(function() {
                $btn.html('<i class="fas fa-check"></i> Đã gửi thành công!');
                $btn.removeClass('btn-primary').addClass('btn-success');
                
                // Reset form
                $('#contactForm')[0].reset();
                
                setTimeout(function() {
                    $btn.html(originalText);
                    $btn.removeClass('btn-success').addClass('btn-primary');
                    $btn.prop('disabled', false);
                    
                    alert('Cảm ơn bạn đã liên hệ! Chúng tôi sẽ phản hồi trong thời gian sớm nhất.');
                }, 2000);
            }, 1500);
        });
    });
    </script>
}