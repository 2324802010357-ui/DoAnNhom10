@model IEnumerable<DoAnNhom10.Models.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    var featured = ViewBag.Featured as List<DoAnNhom10.Models.Product>;
    var bestSellers = ViewBag.BestSellers as List<DoAnNhom10.Models.Product>;
}

<div class="container">
    <!-- Page Header -->
    <div class="section-title">
        <h2>Sản phẩm thời trang</h2>
        <p>Khám phá bộ sưu tập đa dạng và phong cách</p>
    </div>

    <!-- Search and Filter Section -->
    <div class="search-filter-section">
        <div class="row">
            <div class="col-md-6">
                <div class="search-form">
                    <div class="input-group">
                        <input type="text" class="form-control search-box" placeholder="Tìm kiếm sản phẩm..." id="searchInput">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="sort-options">
                    <select class="form-control" id="sortSelect">
                        <option value="">Sắp xếp theo</option>
                        <option value="name">Tên sản phẩm</option>
                        <option value="price-asc">Giá: Thấp đến cao</option>
                        <option value="price-desc">Giá: Cao đến thấp</option>
                        <option value="newest">Mới nhất</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Filter Tags -->
        <div class="filter-tags">
            <a class="filter-tag @(Request["category"] == null ? "active" : "")" href="@Url.Action("Index", "Products")">Tất cả</a>
            <a class="filter-tag @(Request["category"] == "ao" ? "active" : "")" href="@Url.Action("Index", "Products", new { category = "ao" })">Áo</a>
            <a class="filter-tag @(Request["category"] == "quan" ? "active" : "")" href="@Url.Action("Index", "Products", new { category = "quan" })">Quần</a>
            <a class="filter-tag @(Request["category"] == "giay" ? "active" : "")" href="@Url.Action("Index", "Products", new { category = "giay" })">Giày</a>
        </div>

        <!-- Products Grid -->
        <div class="products-container">
            @if (Model != null && Model.Any())
            {
                <div class="row" id="productsGrid">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-4 col-sm-6 mb-4 product-item" data-category="@(product.Category?.Name.ToLower() ?? "other")">
                            <div class="card product-card fade-in-up">
                                <div class="product-image-container">
                                    @{
                                        var firstImage = product.ProductImages?.FirstOrDefault();
                                        var imageUrl = firstImage != null
                                            ? firstImage.Url
                                            : "https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=400";
                                    }
                                    <img src="@imageUrl" class="card-img-top" alt="@product.Name"
                                         style="object-fit:cover;height:250px;border-radius:10px;" />

                                    <!-- Product Badge -->
                                    @if (product.BasePrice > 1000000)
                                    {
                                        <span class="product-badge premium">Premium</span>
                                    }
                                    else if (product.BasePrice < 500000)
                                    {
                                        <span class="product-badge sale">Sale</span>
                                    }

                                    <!-- Hover Overlay -->
                                    <div class="product-overlay">
                                        <a href="@Url.Action("Details", new { id = product.ProductID })" class="btn btn-outline-light btn-sm">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                        <button class="btn btn-outline-light btn-sm" onclick="addToCartQuick(@product.ProductID)">
                                            <i class="fas fa-cart-plus"></i> Mua
                                        </button>
                                    </div>
                                </div>

                                <div class="card-body text-center">
                                    <h5 class="card-title">@product.Name</h5>

                                    <!-- Product Meta -->
                                    <div class="product-meta">
                                        @if (product.Brand != null)
                                        {
                                            <span class="brand-name">@product.Brand.Name</span>
                                        }
                                        @if (product.Category != null)
                                        {
                                            <span class="category-name">@product.Category.Name</span>
                                        }
                                    </div>

                                    <!-- Product Rating -->
                                    <div class="product-rating">
                                        <div class="stars">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="far fa-star"></i>
                                        </div>
                                        <span class="rating-count">(4.0)</span>
                                    </div>

                                    <!-- Product Price -->
                                    <div class="product-price">
                                        <span class="current-price">
                                            @String.Format("{0:N0}đ", product.BasePrice ?? 0)
                                        </span>

                                        @if (product.BasePrice < 500000)
                                        {
                                            <span class="old-price">
                                                @String.Format("{0:N0}đ", (product.BasePrice ?? 0) * 1.2m)
                                            </span>
                                        }
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="product-actions">
                                        <a href="@Url.Action("Details", new { id = product.ProductID })" class="btn btn-outline-primary">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>
                                        <a href="@Url.Action("AddToCart", "Cart", new { id = product.ProductID })" class="btn btn-success">
                                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- No Products Found -->
                <div class="empty-state">
                    <div class="text-center">
                        <i class="fas fa-box-open fa-5x text-muted mb-4"></i>
                        <h3>Không tìm thấy sản phẩm nào</h3>
                        <p class="text-muted">Hiện tại chưa có sản phẩm nào trong danh mục này.</p>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <!-- Thêm thư viện jQuery và jQuery UI cho autocomplete -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />

    <script>
        // 🛒 Nút "Thêm vào giỏ"
        function addToCartQuick(productId) {
            event.preventDefault();
            var btn = event.target.closest('button');
            var originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            btn.disabled = true;

            setTimeout(function () {
                window.location.href = '@Url.Action("AddToCart", "Cart")?id=' + productId;
            }, 500);
        }

        // 🔄 Kích hoạt sắp xếp tự động
        document.addEventListener("DOMContentLoaded", function () {
            var sortSelect = document.getElementById("sortSelect");
            if (sortSelect) {
                sortSelect.addEventListener("change", function () {
                    var sortValue = this.value;
                    var url = new URL(window.location.href);
                    url.searchParams.set("sort", sortValue);
                    window.location.href = url.toString();
                });
            }
        });

        // 🔍 Gợi ý tìm kiếm sản phẩm theo danh mục
        $(function () {
    var currentCategory = new URL(window.location.href).searchParams.get("category");

    $("#searchInput").autocomplete({
        minLength: 1,
        source: function (request, response) {
            $.ajax({
                url: '@Url.Action("SearchSuggestions", "Products")',
                data: { term: request.term, category: currentCategory },
                success: function (data) {
                    response(data);
                }
            });
        },
        select: function (event, ui) {
            window.location.href = '@Url.Action("Index", "Products")?search=' + encodeURIComponent(ui.item.value);
        }
    });
});

    </script>
}

<style>
    .product-card {
        transition: all 0.3s ease;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

    .product-image-container {
        position: relative;
        overflow: hidden;
    }

        .product-image-container img {
            height: 250px;
            width: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

    .product-card:hover .product-image-container img {
        transform: scale(1.1);
    }

    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .product-card:hover .product-overlay {
        opacity: 1;
    }

    .product-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: bold;
        color: white;
        z-index: 2;
    }

        .product-badge.premium {
            background: linear-gradient(45deg, #ff6b6b, #ee5a52);
        }

        .product-badge.sale {
            background: linear-gradient(45deg, #56ab2f, #a8e6cf);
        }

    .product-meta {
        margin: 10px 0;
        font-size: 14px;
        color: #666;
    }

    .brand-name, .category-name {
        margin-right: 10px;
    }

    .product-price {
        margin: 15px 0;
    }

    .current-price {
        font-size: 1.2rem;
        font-weight: bold;
        color: #e74c3c;
    }

    .old-price {
        font-size: 1rem;
        color: #999;
        text-decoration: line-through;
        margin-left: 8px;
    }

    .product-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

        .product-actions .btn {
            flex: 1;
            max-width: 120px;
        }
</style>
